<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ═══════════════════════════════════════════════════════════════════════
         PLANTILLA DE CHECKLIST – Vista Formulario
    ═══════════════════════════════════════════════════════════════════════ -->
    <record id="view_fso_checklist_template_form" model="ir.ui.view">
        <field name="name">fso.checklist.template.form</field>
        <field name="model">fso.checklist.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Checklist">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre de la Plantilla"/>
                        <h1>
                            <field name="name" placeholder="Ej: Mantenimiento mensual de equipo..."/>
                        </h1>
                    </div>
                    <field name="active" invisible="1"/>
                    <notebook>
                        <page string="Ítems del Checklist" name="items">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"
                                           placeholder="Descripción del ítem..."/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════
         PLANTILLA DE CHECKLIST – Vista Lista
    ═══════════════════════════════════════════════════════════════════════ -->
    <record id="view_fso_checklist_template_list" model="ir.ui.view">
        <field name="name">fso.checklist.template.list</field>
        <field name="model">fso.checklist.template</field>
        <field name="arch" type="xml">
            <list string="Plantillas de Checklist">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ═══════════════════════════════════════════════════════════════════════
         ACCIÓN
    ═══════════════════════════════════════════════════════════════════════ -->
    <record id="action_fso_checklist_templates" model="ir.actions.act_window">
        <field name="name">Plantillas de Checklist</field>
        <field name="res_model">fso.checklist.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                ¡Cree su primera plantilla de checklist!
            </p>
            <p>
                Las plantillas permiten cargar automáticamente los ítems
                de verificación al crear una orden de servicio.
            </p>
        </field>
    </record>

</odoo>
