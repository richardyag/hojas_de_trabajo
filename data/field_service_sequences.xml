<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="seq_field_service_order" model="ir.sequence">
        <field name="name">Orden de Servicio en Campo</field>
        <field name="code">field.service.order</field>
        <field name="prefix">FSO/%(year)s/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
        <!-- company_id=False â†’ secuencia global; cambiar a company para multisede -->
    </record>

    <record id="seq_field_service_receipt" model="ir.sequence">
        <field name="name">Recibo de Servicio en Campo</field>
        <field name="code">field.service.receipt</field>
        <field name="prefix">REC/%(year)s/</field>
        <field name="padding">5</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>
</odoo>
